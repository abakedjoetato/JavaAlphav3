modules = ["java", "java-17", "java-21"]

[nix]
channel = "stable-24_05"
packages = ["unzip", "maven", "mongodb", "wget", "jdk"]

[[ports]]
localPort = 27017
externalPort = 80
exposeLocalhost = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Discord Bot"

[[workflows.workflow]]
name = "Discord Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "javac RunBot.java && java RunBot"

[deployment]
run = ["sh", "-c", "cd extracted/JavaAlpha-main && mvn clean compile exec:java -Dexec.mainClass=\"com.deadside.bot.Main\""]
